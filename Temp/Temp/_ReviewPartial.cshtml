
@model ManhStore.Models.BinhLuan
<div class="comment-item">
    <div class="row no-margin">
        <div class="col-lg-1 col-xs-12 col-sm-2 no-margin">
            <div class="avatar">
                @if (@Model.HoTen == null)
                {
                    <img class="avatar-img" alt="avatar" src="@Url.Content("~/images/avatars/")@Model.AspNetUser.Avatar" width="70" height="70">
                }
                else
                {
                    <img class="avatar-img" alt="avatar" src="@Url.Content("~/template/assets/images/default-avatar.jpg") ">
                }
            </div><!-- /.avatar -->
        </div><!-- /.col -->
        <div class="col-xs-12 col-lg-11 col-sm-10 no-margin">
            <div class="review-body">
                <div class="meta-info">
                    <div class="author inline">
                        @if (@Model.HoTen == null)
                        {
                            <a class="bold">@Model.AspNetUser.UserName</a>
                        }
                        else
                        {
                            <a class="bold">@Model.HoTen</a>
                        }

                    </div>
                    <div class="star-holder inline">
                        <div class="star" data-score="@Model.Rate"></div>
                    </div>
                    <div class="date inline pull-right">
                        @Model.NgayDang
                    </div>
                </div><!-- /.meta-info -->
                <p class="comment-text">
                    @Model.NoiDung
                </p><!-- /.comment-text -->
            </div><!-- /.comment-body -->
        </div><!-- /.col -->

    </div><!-- /.row -->
</div><!-- /.comment-item -->