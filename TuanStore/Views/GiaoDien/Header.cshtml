@model List<TuanStore.Models.GiaoDien>
<div class="container no-padding">

    <div class="col-xs-12 col-md-3 logo-holder">
        <!-- ============================================================= LOGO ============================================================= -->
        <div class="logo">
            <a href="@Url.Action("Index", "Home")">
                <img alt="logo" src="~/images/icon/logo.png" width="233" height="54" />
                <!--<object id="sp" type="image/svg+xml" data="~/template/assets/images/logo.svg" width="233" height="54"></object>-->
            </a>
        </div><!-- /.logo -->
        <!-- ============================================================= LOGO : END ============================================================= -->
    </div><!-- /.logo-holder -->
    <div class="col-xs-12 col-md-6 top-search-holder no-margin">
        <div class="contact-row row" style="padding-left:15px;">
            <div class="social-icons col-sm-3" style="padding-top:5px;" >
                <ul>
                    @if (!string.IsNullOrEmpty(Model[3].GiaTri))
                    {
                        <li><a href="@Model[3].GiaTri" class="fa fa-facebook"></a></li>}
                    @if (!string.IsNullOrEmpty(Model[4].GiaTri))
                    {
                        <li><a href="@Model[4].GiaTri" class="fa fa-instagram"></a></li>}
                    @if (!string.IsNullOrEmpty(Model[5].GiaTri))
                    {
                        <li><a href="@Model[5].GiaTri" class="fa fa-twitter"></a></li>}
                    
                </ul>
                
            </div><!-- /.social-icons -->
            <div class="social-icons col-sm-9 text-right">
                <ul>
                    <li class="">
                        <a href="#" class="btn doimau" style="border-radius: 40px;background-color:#34495E">
                            <i class="fa fa-phone" aria-hidden="true" style="color:white;margin-right:0px"></i>
                            <span class="h5 " style="color:white">0982114043</span>
                        </a>
                    </li>
                    <li>
                        <a href="#footer" class="btn doimau" style="border-radius: 40px;background-color:#34495E;">
                            <i class="fa fa-map-marker" aria-hidden="true" style="color:white;margin-right:5px"></i>
                            <span class="h5" style="color:white">Địa chỉ</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div><!-- /.contact-row -->
        <!-- ============================================================= SEARCH AREA ============================================================= -->
        <div class="search-area" style="margin-top:5px;">
            @Html.Action("SearchForm", "Search")
        </div><!-- /.search-area -->
        <!-- ============================================================= SEARCH AREA : END ============================================================= -->
    </div><!-- /.top-search-holder -->
    <div class="col-xs-12 col-md-3 top-cart-row no-margin" style="padding-top:42px;margin-left:6px">
        <div class="top-cart-row-container">
