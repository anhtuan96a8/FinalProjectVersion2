@model TuanStore.Models.ManageUserViewModel

<p class="text-info">
    Bạn chưa đặt mật khẩu cho tài khoản này, hãy đặt mật khẩu lại.
</p>

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>Đặt mật khẩu</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "le-input" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "le-input" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="le-button huge" ><img src="/images/icon/save.jpg" style="border-radius:50%;width:30px; height:30px;margin-right:5px"> Lưu Lại</button>
        </div>
    </div>
}
