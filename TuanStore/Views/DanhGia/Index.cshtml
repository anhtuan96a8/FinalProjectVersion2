@{
    ViewBag.Title = "Quản lý đánh giá sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2><i class="glyphicon glyphicon-user"></i>@ViewBag.Title</h2>
                @*<div class="box-icon">
                    <a href="#" class="btn btn-setting btn-round btn-default"><i class="glyphicon glyphicon-cog"></i></a>
                    <a href="#" class="btn btn-minimize btn-round btn-default">
                        <i class="glyphicon glyphicon-chevron-up"></i>
                    </a>
                    <a href="#" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove"></i></a>
                </div>*@
            </div>
            <div class="box-content">
                <div class="alert alert-info" id="alert-info" style="display:none"></div>
                <div class="form-inline" style="text-align: right; padding: 10px">
                    <div class="input-group">
                       @Html.DropDownList("value", new SelectList(new List<object>
                        {
                            new { value = "5" , text = "Đánh giá 5 sao"  },
                            new { value = "4" , text = "Đánh giá 4 sao" },
                            new { value = "3" , text = "Đánh giá 3 sao" },
                            new { value = "2" , text = "Đánh giá 2 sao"  },
                            new { value = "1" , text = "Đánh giá 1 sao" },
                        }, "value", "text"), "--Số sao--", new { @class = "form-control", id = "sosao", onchange = "timkiemDanhGia()" })
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><i class="red">Ngày</i></span>
                        <input id="dayDG" type="date" class="form-control" onchange="timkiemDanhGia()">
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-search red"></i></span>
                        <input id="inputSPDG" type="text" class="form-control" placeholder="Nhập tên sản phẩm" oninput="timkiemDanhGia()">
                    </div>
                    <div class="input-group">
                        <a class="btn btn-danger" href='javascript:multibledel("@Url.Action("MultibleDel", "DanhGia")")'>
                            <i class="glyphicon glyphicon-trash icon-white"></i>
                            Xóa các đánh giá đã chọn
                        </a>
                    </div>

                </div>
                <div class="Ajax-Table" id="Ajax-Table">
                    @Html.Action("TimDanhGia", "DanhGia")
                </div>

            </div>
        </div>
    </div>
    <!--/span-->
</div><!--/row-->