@{
    ViewBag.Title = "Sản phẩm của chương trình khuyến mại";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2><img src="~/images/icon/discount-admin.png" width="20" />@ViewBag.Title</h2>
                
            </div>
            <div class="box-content">
                <div class="alert alert-info" id="alert-info" style="display:none"></div>
                <div class="form-inline" style="text-align: right; padding: 10px;margin-right:25px">

                    <div class="input-group">
                        @Html.DropDownList("maloai", (SelectList)@ViewBag.LoaiSP,"--Loại sản phẩm--", new { @class = "form-control", id = "maloaisearch", onchange = "timkiemDSSanPham(\'" + ViewBag.makm+"\')" , style="border-radius:5px" })
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><img src="~/images/icon/search-admin.png" width="14" /></span>
                        <input id="inputIcon" type="text" class="form-control" placeholder="Nhập tên sản phẩm" oninput="timkiemDSSanPham('@ViewBag.makm');">
                    </div>
                    <div class="input-group">
                        <a class="btn btn-info" href='javascript:multibleadd("@Url.Action("Multible", "KhuyenMai")")'>
                            <img src="~/images/icon/add-admin.png" width="20" />                            Thêm vào danh sách khuyến mại
                        </a>
                    </div>
                </div>
                <div class="Ajax-Table">
                    @Html.Action("DSSanPham", "KhuyenMai")
                </div>

            </div>
        </div>
    </div>
    <!--/span-->
</div><!--/row-->


