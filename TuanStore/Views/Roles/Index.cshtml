@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Chức vụ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (ViewBag.Message != null)
{
    <script>
        alert("@ViewBag.Message")
    </script>
}
<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2><img src="~/images/icon/user-list.png" width="20px" />@ViewBag.Title</h2>
                @*<div class="box-icon">
            <a href="#" class="btn btn-setting btn-round btn-default"><i class="glyphicon glyphicon-cog"></i></a>
            <a href="#" class="btn btn-minimize btn-round btn-default">
                <i class="glyphicon glyphicon-chevron-up"></i>
            </a>
            <a href="#" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove"></i></a>
        </div>*@
            </div>
            <div class="box-content">
                <div class="alert alert-info" id="alert-infomation" style="display:none">
                    @if (TempData["ErrorCreate"] != null)
                    {
                        <script>
                            $('#alert-infomation').html("Chức vụ chưa được thêm do để trống");
                            $('#alert-infomation').fadeIn(1000);
                            $('#alert-infomation').fadeOut(5000);
                        </script>
                    }
                    @if (TempData["ErrorCreate2"] != null)
                    {
                        <script>
                            $('#alert-infomation').html("Chức vụ chưa được thêm do để trùng");
                            $('#alert-infomation').fadeIn(1000);
                            $('#alert-infomation').fadeOut(5000);
                        </script>
                    }
                    else if (TempData["CreateSuccess"] != null)
                    {
                        <script>
                            $('#alert-infomation').html("Chức vụ được thêm thành công");
                            $('#alert-infomation').fadeIn(1000);
                            $('#alert-infomation').fadeOut(5000);
                        </script>
                    }
                </div>
                <div class="form-inline" style="text-align: right; padding: 10px">
                </div>
                <div class="Ajax-Table">
                    @Html.Action("Rolelist", "Roles")
                </div>
            </div>
        </div>
    </div>
    <!--/span-->
</div><!--/row-->
<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2><img src="~/images/icon/user-list.png" width="20" />Thêm @ViewBag.Title</h2>
                
            </div>
            <div class="box-content">
                @using (Html.BeginForm("Create", "Roles"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                <div class="alert alert-info" id="alert-info" style="display:none">
                    <span id="kiemtratrung"></span>

                </div>

                    <table id="tbrole">
                        <tr>
                            <td class="c"><label class="control-label">Tên chức vụ</label></td>
                            <td class="c">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", oninput = "kiemgiatritrung(this.value,\"" + @Url.Action("KiemTraRole", "Roles") + "\",\"#loaiisok\")" })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                <span id="loaiisok"></span>
                            </td>
                        </tr>
                    </table>
                    <button type="submit"  class="btn btn-info " style="margin-left:115px" ><img src="~/images/icon/addsl.png" width="20" /> Thêm mới</button>
                }
            </div>
        </div>
    </div>
    <!--/span-->
</div><!--/row-->
