@model TuanStore.Models.Giohang
<a class="dropdown-toggle" data-toggle="dropdown" href="#">
    <div class="basket-item-count">
        <span class="count">@Model.Tinhtongsoluongtronggio()</span>
        <img src="@Url.Content("~/images/icon/icon-cart.jpg")" width="61" height="51" alt="" />
    </div>
    <div class="total-price-basket">
        <span class="lbl">giỏ hàng:</span>
        <span class="total-price">
            @if (Model.getGiohang().Count < 1)
            {
                <span class="value">@string.Format("{0:0,0}", 00)  </span><span class="sign">VNĐ</span>
            }
            else
            {
                <span class="value">@string.Format("{0:0,0}", @Model.TinhtongtienCart())  </span><span class="sign">VNĐ</span>
            }
        </span>
    </div>
</a>
<ul class="dropdown-menu">
    @if(Model.getGiohang().Count < 1)
    {
        <div>
            <img src="~/images/icon/emptyorder.png" style="margin-left: 70px" alt="" />
            <p style="margin-left: 15px;color: orangered; font-size:16px;font-weight:bold">Bạn chưa có sản phẩm nào trong giỏ</p>
        </div>
    }
    @for (int i = 0; i < @Model.getGiohang().Count; i++)
    {
        <li>
            <div class="basket-item">
                <div class="row">
                    <div class="col-xs-4 col-sm-4 no-margin text-center">
                        <div class="thumb">
                            <img alt="" src="@Url.Content("~/images/products/"+ @Model.getGiohang()[i].sanPham.AnhDaiDien)" />
                        </div>
                    </div>
                    <div class="col-xs-8 col-sm-8 no-margin">
                        <div class="title">@Model.getGiohang()[i].sanPham.TenSP</div>
                        <div class="price">@string.Format("{0:0,0}", @Model.getGiohang()[i].Thanhtien) VNĐ</div>
                    </div>
                </div>

            </div>
        </li>
    }

    <li class="checkout">
        <div class="basket-item">
            <div class="row">
                <div class="col-xs-12 col-sm-5">
                    <a href="@Url.Action("Cart","Home")" class="le-button inverse"><img src="~/images/icon/view.png" style="border-radius:50%;width:20px; height:20px" /> Xem</a>
                </div>
                <div class="col-xs-12 col-sm-7">
                    <a href="@Url.Action("Checkout","Home")" class="le-button"><img src="~/images/icon/buy.png" style="border-radius:50%;width:20px; height:20px" /> Đặt hàng</a>
                </div>
            </div>
        </div>
    </li>
</ul>

