@using TuanStore.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<HangSanXuat>


<table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
    <thead>
        <tr>
            <th class="text-center">
                <input type="checkbox" onclick="toggle(this)" />
            </th>
            <th>@Html.DisplayNameFor(model => model.First().TenHang)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.First().TruSoChinh)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.First().QuocGia)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="vertical-align:middle; text-align:center">
                    <input type="checkbox" name="lstdel" value="@item.HangSX" />
                </td>
                <td class="center" style="vertical-align:middle">@item.TenHang</td>
                <td class="text-center" style="vertical-align:middle">@item.TruSoChinh</td>
                <td class="text-center" style="vertical-align:middle">@item.QuocGia</td>
                <td class="center">
                    <a class="btn btn-info" href="@Url.Action("EditHangSX", "HangSX", new { id = item.HangSX })">
                        <img src="~/images/icon/edit-admin.png" width="20px" />                        Sửa
                    </a>
                    <a class="btn btn-danger" href='javascript:XoaItem("@Url.Action("DeleteHangSX", "HangSX")","@item.HangSX")'>
                        <img src="~/images/icon/delete2-admin.png" width="20px" />
                        Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination-holder">
    <div class="row">
        <div class="col-xs-12 col-sm-9 text-left">
            <div id="nav_grid">
                @Html.PagedListPager(Model, page => Url.Action("TimHangSX", "HangSX", new { key = @ViewBag.key, page = page }))
            </div>
        </div>
        <div class="col-xs-12 col-sm-3">
            <div class="result-counter h4" style="text-align: right;padding-top:32px;height: 83px;">
                Có tất cả <span>@Model.TotalItemCount</span> dòng
            </div>
        </div>
    </div><!-- /.row -->
</div><!-- /.pagination-holder -->